<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="text-center display-1 white">Minnesota News</h1>
    <h4 class="text-center white">Scraped with Mongo from MPR News</h4>
  </div>
</div>

<div class="articles container-fluid padded">
    {{#each articles}}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-xs-9 col-md-9">
                            <a href="{{link}}"><h4 class="title align-middle white">{{title}}</h4></a>
                        </div>
                        <div class="col-xs-3 col-md-3">
                             <button class="btn save-btn btn-primary" id="{{_id}}">Save Article</button>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>{{body}}</p>
                </div>
            </div>
        </div>
    </div>
    <br>
    {{/each}}
</div>