<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="blue-text display text-center">Saved Articles</h1>
    </div>
</div>

<div class="articles container">
    {{#each articles}}
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header">
                    <a href="{{link}}"><h4>{{title}}</h4></a>
                    <button class="btn btn-danger delete-btn" id="{{_id}}">Delete from Saved</button>
                    <button class="btn btn-primary notes-btn" id="{{_id}}">Article Notes</button>
                </div>
                <div class="card-body">
                    <p>{{body}}</p>
                </div>
            </div>
        </div>
    </div>
    <br>
    {{/each}}
</div>